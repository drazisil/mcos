{
    "name": "shard",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "targets": {
        "build": {
            "executor": "@nx/esbuild:esbuild",
            "outputs": ["{options.outputPath}"],
            "defaultConfiguration": "production",
            "options": {
                "main": "libs/shard/index.ts",
                "outputPath": "dist/libs/shard",
                "outputFileName": "main.js",
                "assets": [
                    {
                        "glob": "libs/shard/README.md",
                        "input": ".",
                        "output": "."
                    }
                ],
                "platform": "node",
                "tsConfig": "libs/types/tsconfig.json"
            },
            "configurations": {
                "development": {
                    "minify": false
                },
                "production": {
                    "minify": true
                }
            }
        }
    }
}
