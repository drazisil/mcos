{
  "extends": ["config:base"],
  "postUpgradeTasks": {
    "commands": ["npm audit"],
    "fileFilters": [""],
    "executionMode": "update"
  },
  "packageRules": [
    {
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["patch", "minor"],
      "groupName": "devDependencies (non-major)"
    },
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "groupName": "dependencies (non-major)",
      "automerge": true
    }
  ]
}
