{
  "name": "mcos-database",
  "version": "1.0.0",
  "main": "src/index.ts",
  "license": "MPL-2.0",
  "dependencies": {
    "@types/node": "16.11.6",
    "pino": "next",
    "slonik": "25.0.0",
    "sqlite": "4.0.23",
    "sqlite3": "4",
    "ts-node": "10.4.0",
    "tslib": "2.3.1"
  },
  "devDependencies": {
    "@babel/cli": "7.16.0",
    "@babel/core": "7.16.0",
    "@jest/globals": "27.3.1",
    "@types/babel__core": "7.1.16",
    "@types/eslint": "7.28.2",
    "@types/prettier": "2.4.1",
    "@types/tap": "15.0.5",
    "@typescript-eslint/eslint-plugin": "5.3.0",
    "@typescript-eslint/parser": "5.3.0",
    "eslint": "8.2.0",
    "eslint-config-prettier": "8.3.0",
    "jest": "27.3.1",
    "prettier": "2.4.1",
    "prettier-eslint": "13.0.0",
    "tap": "15.0.10",
    "ts-jest": "27.0.7",
    "typescript": "4.4.4"
  },
  "scripts": {
    "audit": "npm npm audit",
    "check:license": "npm licenses audit --summary --config=licenses.config.js",
    "start": "ts-node app.ts",
    "check:type": "tsc --noEmit",
    "check:type:watch": "tsc --noEmit --watch",
    "build": "tsc --build",
    "build:clean": "tsc --build --clean",
    "lint": "eslint ./**/*.ts && prettier --write src test",
    "test": "npm run lint && npm run test:only && npm run test:coverage",
    "test:only": "tap --ts --reporter=spec",
    "test:coverage": "tap  --coverage-report=html --coverage-report=html test/**/*.ts",
    "precommit": "npm run lint-test"
  }
}
