  "main": "src/index.ts",
  "license": "MIT",
  "dependencies": {
    "@drazisil/mco-logger": "^4.1.10",
    "@mco-server/config": "workspace:^",
    "@mco-server/database": "workspace:^",
    "@mco-server/lobby": "workspace:^",
    "@mco-server/login": "workspace:^",
    "@mco-server/message-types": "workspace:^",
    "@mco-server/persona": "workspace:^",
    "@mco-server/transactions": "workspace:^",
    "@mco-server/types": "workspace:^"
  },
  "devDependencies": {
    "@babel/cli": "7.16.0",
    "@babel/core": "7.16.0",
    "@jest/globals": "27.3.1",
    "@types/babel__core": "7.1.16",
    "@types/eslint": "7.28.2",
    "@types/prettier": "2.4.1",
    "@typescript-eslint/eslint-plugin": "5.2.0",
    "@typescript-eslint/parser": "5.2.0",
    "eslint": "8.1.0",
    "eslint-config-prettier": "8.3.0",
    "jest": "27.3.1",
