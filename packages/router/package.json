{
  "name": "mcos-router",
  "version": "1.0.0",
  "main": "src/index.ts",
  "license": "MIT",
  "dependencies": {
    "@types/node": "16.11.6",
    "@types/pino": "^6.3.12",
    "mcos-types": "workspace:^",
    "pino": "7.0.5",
    "ts-node": "10.4.0",
    "tslib": "2.3.1"
  },
  "devDependencies": {
    "@babel/cli": "7.16.0",
    "@babel/core": "7.16.0",
    "@jest/globals": "27.3.1",
    "@types/babel__core": "7.1.16",
    "@types/eslint": "7.28.2",
    "@types/prettier": "2.4.1",
    "@types/tap": "15.0.5",
    "@typescript-eslint/eslint-plugin": "5.3.0",
    "@typescript-eslint/parser": "5.3.0",
    "eslint": "8.1.0",
    "eslint-config-prettier": "8.3.0",
    "jest": "27.3.1",
    "prettier": "2.4.1",
    "prettier-eslint": "13.0.0",
    "tap": "15.0.10",
    "ts-jest": "27.0.7",
    "typescript": "4.4.4"
  },
  "scripts": {
    "preinstall": "npx only-allow yarn",
    "audit": "yarn npm audit",
    "check:license": "yarn licenses audit --summary --config=licenses.config.js",
    "start": "yarn exec ts-node app.ts",
    "check:type": "tsc --noEmit",
    "check:type:watch": "tsc --noEmit --watch",
    "build": "tsc --build",
    "build:clean": "tsc --build --clean",
    "lint": "eslint ./**/*.ts && prettier --write src test",
    "test": "yarn run lint && yarn run test:only && yarn run test:coverage",
    "test:only": "tap --ts --reporter=spec",
    "test:coverage": "tap  --coverage-report=html --coverage-report=html test/**/*.ts",
    "precommit": "yarn run lint-test"
  }
}
