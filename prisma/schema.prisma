generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Session {
  customer_id Int 
  sessionkey String
  skey String
  context_id String
  connection_id String @id @unique
}

model Lobby {
  id Int @id @unique
  raceTypeId Int
  turfId Int
  riffName String  // length: 32
  eTurfName String // length: 265
  clientArt String // length: 11
  elementId Int
  turfLength Int
  startSlice Int
  endSlice Int
  dragStageLeft Int
  dragStageRight Int
  dragStagingSlice Int
  gridSpreadFactor Float
  linear Int // small int
  numPlayersMin Int // small int
  numPlayersMax Int // small int
  numPlayersDefault Int // small int
  numPlayersEnabled Boolean
  numLapsMin Int // small int
  numLapsMax Int // small init
  numLapsEnabled Boolean

}
