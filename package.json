{
    "name": "mcos",
    "version": "1.0.0",
    "description": "a server",
    "author": "Drazi Crendraven <drazisil@hey.com>",
    "license": "AGPL-3.0",
    "private": true,
    "repository": {
        "type": "git",
        "url": "git@github.com:drazisil/mcos.git"
    },
    "scripts": {
        "prepare": "husky install",
        "pretest": "eslint --ignore-path .gitignore .",
        "build": "tsc",
        "test": "node --openssl-legacy-provider node_modules/vitest/vitest.mjs run --coverage packages",
        "build:test": "npm run format && npm run build && npm run test",
        "prod": "make prod_node",
        "prod:stop": "docker-compose stop",
        "start:dev": "node --loader ts-node/esm --openssl-legacy-provider app.ts",
        "start:docker": "npm run start:dev 2>&1 | tee -a log/mcos/trace.log"
    },
    "files": [
        "README.md",
        "CHANGELOG.md",
        "AUTHORS"
    ],
    "exports": {
        "./auth": [
            "./packages/mcos-auth/index.js"
        ],
        "./database": [
            "./packages/mcos-database/index.js"
        ],
        "./login": [
            "./packages/mcos-login/index.js"
        ],
        "./lobby": [
            "./packages/mcos-lobby/index.js"
        ],
        "./patch": [
            "./packages/mcos-patch/index.js"
        ],
        "./shard": [
            "./packages/mcos-shard/index.js"
        ],
        "./persona": [
            "./packages/mcos-persona/index.js"
        ],
        "./transactions": [
            "./packages/mcos-transactions/index.js"
        ]
    },
    "types": "./lib/index.d.ts",
    "dependencies": {
        "@mcos/auth": "^1.0.0",
        "@mcos/cli": "^1.0.0",
        "@mcos/database": "^1.0.0",
        "@mcos/gateway": "^1.0.0",
        "@mcos/interfaces": "^1.0.0",
        "@mcos/lobby": "^1.0.0",
        "@mcos/login": "^1.0.0",
        "@mcos/patch": "^1.0.0",
        "@mcos/persona": "^1.0.0",
        "@mcos/shard": "^1.0.0",
        "@mcos/shared": "^1.0.0",
        "@mcos/transactions": "^1.0.0",
        "@sentry/node": "7.66",
        "@sentry/profiling-node": "^1.1.3",
        "moment": "^2.29.4",
        "ts-node": "10.9.1"
    },
    "devDependencies": {
        "@types/chai": "4.3.5",
        "@types/node": "^20.5.7",
        "@types/sinon": "10.0.16",
        "@types/sinon-chai": "3.2.9",
        "@typescript-eslint/eslint-plugin": "^6.5.0",
        "@typescript-eslint/parser": "^6.5.0",
        "@vitest/coverage-v8": "^0.34.3",
        "eslint": "^8.48.0",
        "eslint-config-prettier": "^9.0.0",
        "husky": "^8.0.3",
        "lint-staged": "^14.0.1",
        "prettier": "3.0.3",
        "prettier-eslint": "15.0.1",
        "typescript": "^5.2.2",
        "vitest": "^0.34.3"
    },
    "c8": {
        "all": true,
        "reporter": [
            "text",
            "cobertura",
            "html",
            "lcov"
        ],
        "exclude": [
            ".yarn",
            "coverage",
            "**/*.test.{j,t}s",
            "**/*.d.ts",
            "out",
            "docs",
            "docs2"
        ]
    },
    "workspaces": {
        "packages": [
            "packages/*"
        ]
    },
    "lint-staged": {
        "**/*.js": "eslint"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    }
}
