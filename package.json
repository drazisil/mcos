{
  "name": "mcos",
  "version": "3.0.0-beta1",
  "description": "a server",
  "main": "packages/bin/app.ts",
  "engines": {
    "node": "^14.13.1 || >=16.0.0"
  },
  "files": [
    "README.md",
    "CHANGELOG.md",
    "AUTHORS"
  ],
  "scripts": {
    "audit": "npm audit",
    "check:license": "npm licenses audit --summary --config=licenses.config.js",
    "start": "node built/bin/app.js",
    "build": "npx tsc -b src/tsconfig.json --verbose",
    "build:clean": "rm -rf built && npm run build",
    "lint": "eslint src/**/*.ts && prettier --write src",
    "test": "npm run lint && npm run test:only && npm run test:coverage",
    "test:only": "tap --ts --reporter=spec --no-check-coverage src/**/*.test.ts",
    "test:coverage": "tap  --coverage-report=html --coverage-report=lcov --no-check-coverage --no-browser"
  },
  "author": "Drazi Crendraven <drazisil@hey.com>",
  "license": "MPL-2.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git@github.com:drazisil/mcos.git"
  },
  "dependencies": {
    "@types/node": "16.11.10",
    "@types/pino": "7.0.4",
    "pino": "next"
  },
  "devDependencies": {
    "@tsconfig/node16": "1.0.2",
    "@types/chai": "4.2.22",
    "@types/tap": "15.0.5",
    "@typescript-eslint/eslint-plugin": "5.4.0",
    "@typescript-eslint/parser": "5.4.0",
    "chai": "4.3.4",
    "eslint": "8.3.0",
    "eslint-config-prettier": "8.3.0",
    "mocha": "9.1.3",
    "prettier": "2.4.1",
    "prettier-eslint": "8.8.2",
    "source-map-support": "0.5.21",
    "sqlite": "4.0.23",
    "sqlite3": "4.2.0",
    "tap": "15.1.2",
    "testdouble": "3.16.3",
    "testdouble-chai": "0.5.0",
    "ts-jest": "27.0.7",
    "typescript": "4.5.2"
  },
  "nyc": {
    "reporter": [
      "text",
      "cobertura",
      "html"
    ],
    "useSpawnWrap": true
  }
}
