{
  "name": "mcos",
  "version": "3.2.0-beta1",
  "description": "a server",
  "engines": {
    "node": "^14.13.1 || >=16.0.0"
  },
  "files": [
    "README.md",
    "CHANGELOG.md",
    "AUTHORS"
  ],
  "type": "module",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"packages/**/*.ts\" \"src/**/*.ts\"",
    "test": "c8 ts-node --esm node_modules/.bin/mocha packages/**/*.test.ts",
    "build:test": "npm run format && npm run build && npm run test",
    "prod": "make prod_node",
    "prod:stop": "docker-compose stop",
    "start:dev": "node --trace-deprecation --abort-on-uncaught-exception -r ts-node/register --loader ts-node/esm --openssl-legacy-provider src/app.js",
    "start:docker": "npm run start:dev 2>&1 | tee -a log/mcos/trace.log"
  },
  "author": "Drazi Crendraven <drazisil@hey.com>",
  "license": "AGPL-3.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git@github.com:drazisil/mcos.git"
  },
  "dependencies": {
    "@types/pg": "8.6.5",
    "mcos-gateway": "*",
    "mcos-lobby": "*",
    "mcos-login": "*",
    "pg": "8.8.0",
    "prettier": "2.8.1",
    "prettier-eslint-cli": "6.0.1",
    "ts-node": "10.9.1"
  },
  "devDependencies": {
    "@types/chai": "4.3.4",
    "@types/mocha": "9.1.1",
    "@types/node": "18.11.13",
    "@typescript-eslint/eslint-plugin": "5.46.0",
    "@typescript-eslint/parser": "5.46.0",
    "c8": "7.12.0",
    "chai": "4.3.7",
    "eslint": "8.29.0",
    "mocha": "10.1.0",
    "prettier-eslint": "15.0.1",
    "source-map-support": "0.5.21",
    "standard": "17.0.0",
    "ts-mockito": "2.6.1"
  },
  "volta": {
    "node": "18.12.1",
    "npm": "9.2.0"
  },
  "workspaces": [
    "packages/mcos-logger",
    "packages/mcos-types"
  ],
  "c8": {
    "all": true,
    "reporter": [
      "text",
      "cobertura",
      "html"
    ]
  },
  "eslintConfig": {
    "env": {
      "es2021": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {}
  }
}
