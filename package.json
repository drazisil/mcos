{
  "name": "mcos",
  "version": "3.2.0-beta1",
  "description": "a server",
  "engines": {
    "node": "^14.13.1 || >=16.0.0"
  },
  "files": [
    "README.md",
    "CHANGELOG.md",
    "AUTHORS"
  ],
  "type": "module",
  "scripts": {
    "format": "prettier-eslint",
    "test": "tsc -b --verbose && standard --fix && eslint && c8 mocha --recursive \"packages/**/*.test.js\" \"test\"",
    "prod": "make prod_node",
    "prod:stop": "docker-compose stop",
    "start": "node --trace-deprecation --abort-on-uncaught-exception -r ts-node/register --openssl-legacy-provider src/app.js",
    "start:docker": "npm start 2>&1 | tee -a log/mcos/trace.log"
  },
  "author": "Drazi Crendraven <drazisil@hey.com>",
  "license": "AGPL-3.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git@github.com:drazisil/mcos.git"
  },
  "dependencies": {
    "@types/pg": "8.6.5",
    "mcos-admin": "*",
    "mcos-core": "*",
    "mcos-login": "*",
    "mcos-shared": "*",
    "pg": "8.7.3",
    "ts-node": "10.8.0",
    "typescript": "4.7.2"
  },
  "devDependencies": {
    "@types/chai": "4.3.1",
    "@types/mocha": "9.1.1",
    "@types/node": "17.0.10",
    "c8": "7.11.3",
    "chai": "4.3.6",
    "eslint": "8.16.0",
    "mocha": "10.0.0",
    "source-map-support": "0.5.21",
    "standard": "17.0.0"
  },
  "nyc": {
    "reporter": [
      "text",
      "cobertura",
      "html"
    ],
    "useSpawnWrap": true
  },
  "volta": {
    "node": "18.1.0",
    "npm": "8.10.0"
  },
  "workspaces": [
    "packages/mcos-shared",
    "packages/mcos-core",
    "packages/mcos-patch",
    "packages/mcos-shard",
    "packages/mcos-auth",
    "packages/mcos-admin",
    "packages/mcos-database",
    "packages/mcos-transactions",
    "packages/mcos-persona",
    "packages/mcos-login",
    "packages/mcos-lobby"
  ]
}
