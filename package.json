{
  "name": "mcos",
  "version": "3.0.0-beta1",
  "description": "a server",
  "main": "packages/bin/app.ts",
  "engines": {
    "node": "^14.13.1 || >=16.0.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "files": [
    "README.md",
    "CHANGELOG.md",
    "AUTHORS"
  ],
  "scripts": {
    "preinstall": "npx only-allow yarn",
    "audit": "yarn npm audit",
    "check:license": "yarn licenses audit --summary --config=licenses.config.js",
    "start": "yarn exec ts-node packages/bin/app.ts",
    "check:type": "tsc --noEmit",
    "check:type:watch": "tsc --noEmit --watch",
    "build": "tsc --build",
    "build:clean": "tsc --build --clean",
    "lint": "eslint packages/**/*.ts && prettier --write packages",
    "test": "yarn run lint && yarn run test:only && yarn run test:coverage",
    "test:only": "tap --ts --reporter=spec --no-check-coverage",
    "test:coverage": "tap  --coverage-report=html --coverage-report=lcov --no-check-coverage",
    "precommit": "yarn run lint-test"
  },
  "author": "Drazi Crendraven <drazisil@hey.com>",
  "license": "MPL-2.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git@github.com:drazisil/mco-server.git"
  },
  "dependencies": {
    "@types/node": "16.11.6",
    "@types/pino": "6.3.12",
    "mcos-admin": "workspace:^",
    "mcos-auth": "workspace:^",
    "mcos-core": "workspace:^",
    "mcos-patch": "workspace:^",
    "mcos-proxy": "workspace:^",
    "mcos-router": "workspace:^",
    "mcos-shard": "workspace:^",
    "pino": "next",
    "ts-node": "10.4.0"
  },
  "devDependencies": {
    "@babel/cli": "7.16.0",
    "@babel/core": "7.16.0",
    "@babel/plugin-proposal-class-properties": "7.16.0",
    "@babel/preset-env": "7.16.0",
    "@babel/preset-typescript": "7.16.0",
    "@jest/globals": "27.3.1",
    "@tsconfig/node14": "1.0.1",
    "@types/supertest": "2.0.11",
    "@types/tap": "15.0.5",
    "@typescript-eslint/eslint-plugin": "5.3.0",
    "@typescript-eslint/parser": "5.3.0",
    "eslint": "8.1.0",
    "eslint-config-prettier": "8.3.0",
    "jest": "27.3.1",
    "prettier": "2.4.1",
    "prettier-eslint": "13.0.0",
    "sinon": "12.0.1",
    "source-map-support": "0.5.20",
    "supertest": "6.1.6",
    "tap": "15.0.10",
    "testdouble": "3.16.3",
    "ts-jest": "27.0.7",
    "tslib": "2.3.1",
    "typescript": "4.4.4"
  }
}
