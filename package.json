{
    "name": "mcos",
    "version": "0.1.0-alpha",
    "description": "a server",
    "engines": {
        "node": "^14.13.1 || >=16.0.0"
    },
    "files": [
        "README.md",
        "CHANGELOG.md",
        "AUTHORS"
    ],
    "exports": {
        "./auth": [
            "./packages/mcos-auth/index.js"
        ],
        "./database": [
            "./packages/mcos-database/index.js"
        ],
        "./gateway": [
            "./packages/mcos-gateway/index.js"
        ],
        "./login": [
            "./packages/mcos-login/index.js"
        ],
        "./lobby": [
            "./packages/mcos-lobby/index.js"
        ],
        "./patch": [
            "./packages/mcos-patch/index.js"
        ],
        "./shard": [
            "./packages/mcos-shard/index.js"
        ],
        "./persona": [
            "./packages/mcos-persona/index.js"
        ],
        "./shared": [
            "./src/shared/index.js"
        ],
        "./structures": [
            "./src/structures/index.js"
        ],
        "./transactions": [
            "./packages/mcos-transactions/index.js"
        ]
    },
    "type": "module",
    "scripts": {
        "build": "tsc",
        "format": "prettier --write app.js \"packages/**/*.{j,t}s\"",
        "test": "c8 mocha {src,packages}/**/*.test.{j,t}s",
        "build:test": "npm run format && npm run build && npm run test",
        "prod": "make prod_node",
        "prod:stop": "docker-compose stop",
        "start:dev": "node --loader ts-node/esm --openssl-legacy-provider app.ts",
        "start:docker": "npm run start:dev 2>&1 | tee -a log/mcos/trace.log"
    },
    "author": "Drazi Crendraven <drazisil@hey.com>",
    "license": "AGPL-3.0",
    "private": true,
    "repository": {
        "type": "git",
        "url": "git@github.com:drazisil/mcos.git"
    },
    "devDependencies": {
        "@types/chai": "4.3.5",
        "@types/mocha": "10.0.1",
        "@types/node": "^18.16.18",
        "c8": "7.14.0",
        "chai": "4.3.7",
        "madge": "^6.1.0",
        "mocha": "10.2.0",
        "prettier": "2.8.8",
        "prettier-eslint": "15.0.1",
        "typescript": "5.1.3"
    },
    "c8": {
        "all": true,
        "reporter": [
            "text",
            "cobertura",
            "html",
            "lcov"
        ],
        "exclude": [
            ".yarn",
            "coverage",
            "**/*.test.js",
            "**/*.d.ts"
        ]
    },
    "eslintConfig": {
        "env": {
            "es2021": true,
            "node": true
        },
        "extends": [
            "eslint:recommended",
            "plugin:@typescript-eslint/recommended"
        ],
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
            "ecmaVersion": "latest",
            "sourceType": "module"
        },
        "plugins": [
            "@typescript-eslint"
        ],
        "rules": {}
    },
    "dependencies": {
        "@sentry-internal/tracing": "7.54.0",
        "@sentry/core": "7.54.0",
        "@sentry/node": "7.54.0",
        "@sentry/profiling-node": "1.0.3",
        "@sentry/types": "7.54.0",
        "@sentry/utils": "7.54.0",
        "rm": "^0.1.8",
        "ts-node": "10.9.1"
    }
}
