{
  "name": "mco-server",
  "version": "3.0.0-beta1",
  "description": "a server",
  "main": "index.js",
  "engines": {
    "node": "^14.13.1 || >=16.0.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "files": [
    "README.md",
    "CHANGELOG.md",
    "AUTHORS"
  ],
  "scripts": {
    "preinstall": "npx only-allow yarn",
    "audit": "yarn npm audit",
    "check:license": "yarn licenses audit --summary --config=licenses.config.js",
    "start": "ts-node bin/app.ts",
    "check:type": "tsc --noEmit",
    "check:type:watch": "tsc --noEmit --watch",
    "build": "tsc --build",
    "build:clean": "tsc --build --clean",
    "lint": "eslint packages/**/*.ts && prettier --write packages",
    "lint-test": "yarn run lint && yarn run test:only",
    "test:only": "jest",
    "precommit": "yarn run lint-test"
  },
  "author": "Drazi Crendraven <drazisil@hey.com>",
  "license": "MPL-2.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git@github.com:drazisil/mco-server.git"
  },
  "dependencies": {
    "@drazisil/mco-logger": "4.1.10",
    "@mco-server/admin": "workspace:^",
    "@mco-server/auth": "workspace:^",
    "@mco-server/core": "workspace:^",
    "@mco-server/patch": "workspace:^",
    "@mco-server/proxy": "workspace:^",
    "@mco-server/router": "workspace:^",
    "@mco-server/shard": "workspace:^"
  },
  "devDependencies": {
    "@babel/cli": "7.16.0",
    "@babel/core": "7.16.0",
    "@babel/plugin-proposal-class-properties": "7.16.0",
    "@babel/preset-env": "7.16.0",
    "@babel/preset-typescript": "7.16.0",
    "@jest/globals": "27.3.1",
    "@tsconfig/node14": "1.0.1",
    "@types/node": "16.11.6",
    "@types/supertest": "2.0.11",
    "@typescript-eslint/eslint-plugin": "5.2.0",
    "@typescript-eslint/parser": "5.2.0",
    "eslint": "8.1.0",
    "eslint-config-prettier": "8.3.0",
    "jest": "27.3.1",
    "prettier": "2.4.1",
    "prettier-eslint": "13.0.0",
    "sinon": "11.1.2",
    "source-map-support": "0.5.20",
    "supertest": "6.1.6",
    "testdouble": "3.16.2",
    "ts-jest": "27.0.7",
    "ts-node": "10.4.0",
    "typescript": "4.4.4"
  }
}
