{
    "name": "rusty-motors",
    "version": "0.5.0",
    "description": "This is a game server, being written from scratch, for a very old and long dead game. The owners of said game have shown no interest in bringing it back, but even so all names of their IP have been avoided to prevent issues.",
    "type": "module",
    "exports": {
        ".": "./dist/index.js"
    },
    "scripts": {
        "lint": "eslint apps libs",
        "build": "tsc -b --verbose",
        "test": "NODE_OPTIONS=--openssl-legacy-provider vitest run",
        "start": "node --env-file=.env dist/server.js",
        "dev": "run-p dev:*"
    },
    "author": "Molly Crendraven <drazi@duck.com>",
    "license": "AGPL-3.0",
    "private": true,
    "repository": {
        "type": "git",
        "url": "git@github.com:drazisil/mcos.git"
    },
    "devDependencies": {
      "@eslint/eslintrc": "^2.1.1",
      "@eslint/js": "~8.57.0",
        "@sentry/node": "7.109.0",
        "@sentry/profiling-node": "7.109.0",
        "@slonik/migrator": "0.12.0",
        "@types/node": "20.12.7",
        "@vitest/coverage-v8": "1.4.0",
        "@vitest/ui": "^1.4.0",
        "@webpack-cli/generators": "^3.0.7",
        "eslint": "8.57.0",
        "eslint-config-prettier": "9.1.0",
        "eslint-plugin-prettier": "5.1.3",
        "npm-run-all2": "6.1.2",
        "prettier": "3.2.5",
        "typescript": "5.4.5",
        "typescript-eslint": "^7.6.0",
        "vitest": "1.4.0",
        "webpack-cli": "^5.1.4"
    },
    "dependencies": {
        "@fastify/sensible": "^5.5.0",
        "@sentry/esbuild-plugin": "^2.16.0",
        "fastify": "^4.26.2",
        "pino": "^8.19.0",
        "pino-pretty": "^11.0.0",
        "rusty-database": "workspace:^",
        "rusty-gateway": "workspace:^",
        "rusty-packets": "workspace:^",
        "short-unique-id": "^5.0.3",
        "slonik": "^40.0.0",
        "tsx": "^4.7.1",
        "zod": "^3.22.4"
