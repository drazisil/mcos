{
  "name": "mcos",
  "version": "3.2.0-beta1",
  "description": "a server",
  "engines": {
    "node": "^14.13.1 || >=16.0.0"
  },
  "files": [
    "README.md",
    "CHANGELOG.md",
    "AUTHORS"
  ],
  "type": "module",
  "scripts": {
    "lint": "eslint bin/app.js packages/**/*.js --fix && npx prettier -w bin/app.js packages/**/*.js",
    "check:license": "npm licenses audit --summary --config=licenses.config.js",
    "test": "tsc && c8 mocha packages/**/*test.js",
    "start": "node bin/app.js | ./node_modules/.bin/pino-pretty"
  },
  "author": "Drazi Crendraven <drazisil@hey.com>",
  "license": "MPL-2.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git@github.com:drazisil/mcos.git"
  },
  "dependencies": {
    "@types/pg": "8.6.5",
    "mcos-core": "*",
    "mcos-shared": "*",
    "pg": "8.7.3",
    "pino": "next",
    "typescript": "4.6.3"
  },
  "devDependencies": {
    "@tsconfig/node16": "1.0.2",
    "@types/chai": "4.3.1",
    "@types/mocha": "^9.1.0",
    "@types/node": "17.0.10",
    "@typescript-eslint/eslint-plugin": "5.19.0",
    "@typescript-eslint/parser": "5.19.0",
    "c8": "^7.11.0",
    "chai": "4.3.6",
    "cross-env": "^7.0.3",
    "eslint": "8.13.0",
    "eslint-config-prettier": "8.5.0",
    "mocha": "9.2.2",
    "pino-pretty": "7.6.1",
    "prettier": "2.6.2",
    "prettier-eslint": "13.0.0",
    "source-map-support": "0.5.21"
  },
  "nyc": {
    "reporter": [
      "text",
      "cobertura",
      "html"
    ],
    "useSpawnWrap": true
  },
  "volta": {
    "node": "16.14.2",
    "npm": "8.7.0"
  },
  "workspaces": [
    "packages/mcos-shared",
    "packages/mcos-core",
    "packages/mcos-patch",
    "packages/mcos-shard",
    "packages/mcos-auth",
    "packages/mcos-admin",
    "packages/mcos-database",
    "packages/mcos-transactions",
    "packages/mcos-persona",
    "packages/mcos-login",
    "packages/mcos-lobby"
  ]
}
