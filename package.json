{
  "name": "mcos",
  "version": "3.1.0-beta1",
  "description": "a server",
  "main": "packages/bin/app.ts",
  "engines": {
    "node": "^14.13.1 || >=16.0.0"
  },
  "files": [
    "README.md",
    "CHANGELOG.md",
    "AUTHORS"
  ],
  "scripts": {
    "audit": "npm audit",
    "check:license": "npm licenses audit --summary --config=licenses.config.js",
    "start": "node src/bin/app.js | ./node_modules/.bin/pino-pretty",
    "build": "npx tsc --build --verbose",
    "build:clean": "rm -rf built && npm run build",
    "test": "nyc ava"
  },
  "author": "Drazi Crendraven <drazisil@hey.com>",
  "license": "MPL-2.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git@github.com:drazisil/mcos.git"
  },
  "dependencies": {
    "@types/node": "16.11.14",
    "@types/pino": "7.0.4",
    "pino": "next"
  },
  "devDependencies": {
    "@tsconfig/node16": "1.0.2",
    "@types/chai": "4.3.0",
    "@types/tap": "15.0.5",
    "@typescript-eslint/eslint-plugin": "5.7.0",
    "@typescript-eslint/parser": "5.7.0",
    "ava": "3.15.0",
    "chai": "4.3.4",
    "eslint": "8.5.0",
    "eslint-config-prettier": "8.3.0",
    "mocha": "9.1.3",
    "pino-pretty": "7.3.0",
    "prettier": "2.5.1",
    "prettier-eslint": "8.8.2",
    "source-map-support": "0.5.21",
    "sqlite": "4.0.23",
    "sqlite3": "4.2.0",
    "tap": "15.1.5",
    "testdouble": "3.16.3",
    "testdouble-chai": "0.5.0",
    "ts-jest": "27.1.2",
    "typescript": "4.5.4"
  },
  "nyc": {
    "reporter": [
      "text",
      "cobertura",
      "html"
    ],
    "useSpawnWrap": true
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  }
}
