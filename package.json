{
  "name": "mcos",
  "version": "1.0.0",
  "description": "a server",
  "author": "Drazi Crendraven <drazisil@hey.com>",
  "license": "AGPL-3.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git@github.com:drazisil/mcos.git"
  },
  "scripts": {
    "prepare": "husky install",
    "pretest": "eslint .",
    "build:dev": "rimraf dist types && tsc -b --verbose",
    "build": "rimraf dist types && tsc -b && npm run sentry:sourcemaps",
    "test": "node --openssl-legacy-provider node_modules/vitest/vitest.mjs run --coverage packages",
    "build:test": "npm run format && npm run build && npm run test",
    "prod": "make prod_node",
    "prod:stop": "docker-compose stop",
    "release": "standard-version --sign",
    "start:dev": "node --openssl-legacy-provider dist/server.js",
    "start:docker": "npm run start:dev 2>&1 | tee -a log/mcos/trace.log",
    "sentry:sourcemaps": "sentry-cli sourcemaps inject --org drazisilcom --project mcos ./dist && sentry-cli sourcemaps upload --org drazisilcom --project mcos ./dist"
  },
  "files": [
    "README.md",
    "CHANGELOG.md",
    "AUTHORS"
  ],
  "type": "module",
  "imports": {
    "types": "./types"
  },
  "dependencies": {
    "@sentry/node": "7.63",
    "@sentry/profiling-node": "^1.1.2",
    "moment": "^2.29.4",
    "sequelize": "^6.32.1",
    "sqlite3": "^5.1.6",
    "ts-node": "10.9.1"
  },
  "devDependencies": {
    "@sentry/cli": "^2.20.5",
    "@tsconfig/node-lts": "^18.12.5",
    "@types/chai": "4.3.5",
    "@types/node": "^20.5.8",
    "@types/sinon": "10.0.16",
    "@types/sinon-chai": "3.2.9",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "@vitest/coverage-v8": "^0.34.1",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "prettier": "3.0.1",
    "prettier-eslint": "15.0.1",
    "rimraf": "^5.0.1",
    "standard-version": "^9.5.0",
    "typescript": "^5.1.6",
    "typescript-eslint-language-service": "^5.0.5",
    "vitest": "^0.34.1"
  },
  "c8": {
    "all": true,
    "reporter": [
      "text",
      "cobertura",
      "html",
      "lcov"
    ],
    "exclude": [
      ".yarn",
      "coverage",
      "**/*.test.{j,t}s",
      "**/*.d.ts",
      "dist",
      "docs",
      "docs2"
    ]
  },
  "lint-staged": {
    "**/*.js": "eslint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
