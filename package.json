{
    "name": "rusty-motors",
    "version": "1.0.0",
    "description": "This is a game server, being written from scratch, for a very old and long dead game. The owners of said game have shown no interest in bringing it back, but even so all names of their IP have been avoided to prevent issues.",
    "main": "index.js",
    "type": "module",
    "scripts": {
        "lint": "eslint --fix . && prettier --write .",
        "build": "tsc",
        "pretest": "npm run build",
        "prestart": "npm run build",
        "test": "node --openssl-legacy-provider node_modules/.bin/vitest run",
        "start": "node --openssl-legacy-provider --env-file=.env dist/thebeast/server.js"
    },
    "author": "Molly Crendraven <drazi@duck.com>",
    "license": "AGPL-3.0",
    "private": true,
    "repository": {
        "type": "git",
        "url": "git@github.com:drazisil/mcos.git"
    },
    "workspaces": [
        "thebeast"
    ],
    "devDependencies": {
        "@slonik/migrator": "^0.12.0",
        "@types/node": "^20.11.16",
        "prettier": "3.2.4",
        "ts-loader": "^9.5.1",
        "typescript": "^5.3.3",
        "vitest": "^1.2.2"
    },
    "dependencies": {
        "slonik": "29"
    }
}
