{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "Node",
        "target": "ES2020",
        "allowJs": true,
        "noEmit": true,
        "checkJs": true,
        "strict": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "allowSyntheticDefaultImports": true,
        "paths": {
            "mcos/shared": ["./src/shared/index.js"]
        }
    },
    "exclude": ["node_modules", "**/node_modules/*", "coverage"]
}
