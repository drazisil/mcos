{
    "compilerOptions": {
        "incremental": true,
        "target": "es2022",
        "module": "NodeNext",
        "noImplicitOverride": true,
        "declaration": true,
        "declarationMap": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "inlineSources": true,

        // Set `sourceRoot` to  "/" to strip the build path prefix
        // from generated source code references.
        // This improves issue grouping in Sentry.
        "sourceRoot": "/"
    },
    "include": [
        "src",
        "test",
        "packages",
        "thebeast",
        "lib",
        "vite.config.ts",
        "server.ts",
        "migrate.ts",
    ],
}
