{
    "compilerOptions": {
        "incremental": true,
        "target": "es2022",
        "module": "NodeNext",
        "noImplicitOverride": true,
        "declaration": true,
        "declarationMap": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["app/**/*.ts", "packages/**/*.ts"]
}
