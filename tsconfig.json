{
    "compilerOptions": {
        "incremental": true,
        "target": "es2022",
        "module": "NodeNext",
        "noImplicitOverride": true,
        "declaration": true,
        "declarationMap": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
    },
    "include": [
        "src",
        "test",
        "packages",
        "thebeast",
        "lib",
        "vite.config.ts",
        "server.ts",
        "migrate.ts",
    ],
}
