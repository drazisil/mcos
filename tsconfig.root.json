{
  "compilerOptions": {
    "composite": true,
    "allowJs": true,
    "checkJs": true,
    "module": "es2022",
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "target": "es2022",
    "sourceMap": true,
    "declarationMap": true,
    "emitDeclarationOnly": true
  }
}
